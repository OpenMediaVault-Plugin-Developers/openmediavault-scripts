[
  {
    "type": "rpc",
    "id": "rpc.scripts.set",
    "params": {
      "type": "object",
      "properties": {
        "sharedfolderref": {
          "type": "string",
          "oneOf": [
            {
              "type": "string",
              "format": "uuidv4"
            },
            {
              "type": "string",
              "maxLength": 0
            }
          ],
          "required": true
        },
        "scriptsowner": {
          "type": "string",
          "required": true
        },
        "scriptsgroup": {
          "type": "string",
          "required": true
        },
        "fileperms": {
          "type": "string",
          "required": true
        }
      }
    }
  },
  {
    "type": "rpc",
    "id": "rpc.scripts.setscript",
    "params": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "required": true
        },
        "body": {
          "type": "string",
          "required": true
        },
        "ext": {
          "type": "string",
          "required": true
        },
        "testargs": {
          "type": "string",
          "required": false
        }
      }
    }
  },
  {
    "type": "rpc",
    "id": "rpc.scripts.addurl",
    "params": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "required": true
        },
        "name": {
          "type": "string",
          "required": true
        }
      }
    }
  },
  {
    "type": "rpc",
    "id": "rpc.scripts.import",
    "params": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "required": true
        }
      }
    }
  },
  {
    "type": "rpc",
    "id": "rpc.scripts.setjob",
    "params": {
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string",
          "required": true
        },
        "enable": {
          "type": "boolean",
          "required": true
        },
        "script": {
          "type": "string",
          "required": true
        },
        "args": {
          "type": "string",
          "required": true
        },
        "sendemail": {
          "type": "boolean",
          "required": true
        },
        "comment": {
          "type": "string"
        },
        "execution": {
          "type": "string",
          "enum": [
            "exactly",
            "hourly",
            "daily",
            "weekly",
            "monthly",
            "yearly",
            "reboot"
          ],
          "required": true
        },
        "minute": {
          "type": "array",
          "items": {
            "type": "string",
            "oneOf": [
              {
                "type": "string",
                "enum": [
                  "*"
                ]
              },
              {
                "type": "string",
                "pattern": "^[0-9]|[1-5][0-9]$"
              }
            ]
          },
          "required": true
        },
        "everynminute": {
          "type": "boolean",
          "required": true
        },
        "hour": {
          "type": "array",
          "items": {
            "type": "string",
            "oneOf": [
              {
                "type": "string",
                "enum": [
                  "*"
                ]
              },
              {
                "type": "string",
                "pattern": "^[0-9]|1[0-9]|2[0-3]$"
              }
            ]
          },
          "required": true
        },
        "everynhour": {
          "type": "boolean",
          "required": true
        },
        "month": {
          "type": "array",
          "items": {
            "type": "string",
            "oneOf": [
              {
                "type": "string",
                "enum": [
                  "*"
                ]
              },
              {
                "type": "string",
                "pattern": "^[1-9]|1[0-2]$"
              }
            ]
          },
          "required": true
        },
        "dayofmonth": {
          "type": "array",
          "items": {
            "type": "string",
            "oneOf": [
              {
                "type": "string",
                "enum": [
                  "*"
                ]
              },
              {
                "type": "string",
                "pattern": "^[1-9]|[12][0-9]|3[01]$"
              }
            ]
          },
          "required": true
        },
        "everyndayofmonth": {
          "type": "boolean",
          "required": true
        },
        "dayofweek": {
          "type": "array",
          "items": {
            "type": "string",
            "oneOf": [
              {
                "type": "string",
                "enum": [
                  "*"
                ]
              },
              {
                "type": "string",
                "pattern": "^[1-7]$"
              }
            ]
          },
          "required": true
        }
      }
    }
  }
]
